{
  "version": 2,

  "functions": {
    "api/*.js": { "runtime": "nodejs20.x" }
  },

  "routes": [
    { "handle": "filesystem" },
    { "src": "^(?!/api/).*$", "dest": "/index.html" }
  ],

  
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-store" },
        { "key": "CDN-Cache-Control", "value": "no-store" },
        { "key": "Vercel-CDN-Cache-Control", "value": "no-store" }
      ]
    }
  ]
}

